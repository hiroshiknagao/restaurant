<div class="container">
  <h2><%= @nice_restaurant.name %></h2>
  <p><%= @nice_restaurant.address%></p>
  <p><%= @nice_restaurant.category%></p>
  <p><%= '⭐️'* @nice_restaurant.rating%></p>
  <p><%= link_to "Home", nice_restaurants_path, class: 'btn btn-primary' %></p>
</div>
<div class="d-flex">
  <%= link_to edit_nice_restaurant_path(@nice_restaurant), class: 'btn-btn-primary' do %>
    <i class="fa-solid fa-pencil"></i>
  <% end %>
  <%= link_to nice_restaurant_path(@nice_restaurant), data: {turbo_method: :delete, turbo_confirm: "Remove #{@nice_restaurant.name}?"},
    class: 'btn-btn-danger' do %>
    <i class="fa-solid fa-trash"></i>
  <% end %>
</div>
